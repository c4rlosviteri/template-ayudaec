// Imports

@import 'nib'
@import url('normalize.css')

// Vars

vendor-prefixes = ms moz official webkit

// Font

@font-face
    font-family 'icomoon'
    src url('../fonts/icomoon.eot?46frue')
    src url('../fonts/icomoon.eot?46frue#iefix') format('embedded-opentype'), url('../fonts/icomoon.ttf?46frue') format('truetype'), url('../fonts/icomoon.woff?46frue') format('woff'), url('../fonts/icomoon.svg?46frue#icomoon') format('svg')
    font-weight normal
    font-style normal

[class^="icon-"], [class*=" icon-"]
    font-family 'icomoon' !important
    speak none
    font-style normal
    font-weight normal
    font-variant normal
    text-transform none
    line-height 1
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

.icon-sms:before
    content "\e900"
.icon-map:before
    content "\e901"
.icon-medicine:before
    content "\e902"
.icon-clothes:before
    content "\e903"
.icon-lantern:before
    content "\e904"
.icon-hammer:before
    content "\e905"
.icon-news:before
    content "\e906"
.icon-pointer:before
    content "\e907"
.icon-marmalade:before
    content "\e908"

// Grid

.container
  margin-right auto
  margin-left auto
  padding-right 2%
  padding-left 2%
  max-width 98%
.row
  box-sizing border-box
  display flex
  flex-direction row
  flex-wrap wrap
  flex 0 1 auto
  margin-left -1%
  margin-right -1%
.row + .row
  margin-bottom 10px
.row.reverse
  flex-direction row-reverse
.col.reverse
  flex-direction column-reverse

