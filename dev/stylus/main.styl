// Imports

@import url("https://fonts.googleapis.com/css?family=Roboto:400,300,700")
@import url("https://fonts.googleapis.com/css?family=Roboto+Slab:400,700")
@import url("normalize.css")
@import "nib"

// Vars

vendor-prefixes = ms moz official webkit
$yellow = #fdd315
$blue = #27527e
$black = #1c1c1c
$gray = #515254
$lightengray = lighten($gray, 85%)
$midgray = $lighten($gray, 30%)

// General

*
  box-sizing border-box

html
  color $black
  font-family "Roboto"
  font-size 16px

// modifiers

.yellow
  background $yellow
.blue
  color $blue
.text-center
  display block
  text-align center

// header

.Header
  &-hamburger
    padding 2rem 0
    position relative
    transform rotate(0deg)
    transition .5s ease-in-out
    .Header-lines
      background $yellow
      border-radius .25rem
      display block
      height .375rem
      left 0
      opacity 1
      position relative
      transform rotate(0deg)
      transition .25s ease-in-out
      width 2.5rem
      &:nth-child(1)
        top 0
      &:nth-child(2)
        top .375rem
      &:nth-child(3)
        top .75rem
    &.open-hamburger
      background $yellow
      .Header-lines
        background black
        &:nth-child(1)
          top 1rem
          transform rotate(135deg)
        &:nth-child(2)
          opacity 0
          left -60px
        &:nth-child(3)
          top .25rem
          transform rotate(-135deg)
  &-lineswrapper
    position absolute
    right 2rem
    top 1rem
  &-logo-mobile
    display block
    margin 1rem auto 3rem auto
    max-height 200px
    max-width 200px
  &-logo-desktop
    display none
  &-nav
    height 0
    opacity 0
    padding 0 2rem 1rem 2rem
    transition .25s ease-in-out
    ul
      padding 0
      margin 0
      li
        border-bottom 1px solid white
        list-style none
        padding 1rem 0
        text-align center
        &:last-child
          border-bottom 0
        a
          color inherit
          text-decoration none
    &.nav-open
      background $yellow
      display block
      height auto
      opacity 1

// Form

button(c, t, p)
  background c
  border-bottom .25rem solid darken(c, p)
  border-radius .25rem
  color t
  cursor pointer
  font-size 1.5rem
  display block
  margin 1rem 0
  padding 1rem 0
  text-align center
  text-decoration none
  text-transform uppercase
  width 100%

.button
  button($blue, white, 25%)
  &--yellow
    button($yellow, black, 15%)

input[type="submit"]
  border-left none
  border-right none
  border-top none

input[type="text"], input[type="email"], input[type="password"], textarea
  font-size 14px
  border 1px solid $midgray
  margin .5rem 0
  padding .8rem 1rem

select
  padding 1rem

textarea
  display block
  resize vertical
  width 100%

// Text

a
  color $blue

blockquote
  color $blue
  border-left 0.25rem solid rgba($blue, .5)
  font-weight 300
  line-height 1.5rem
  margin 1rem
  padding-left 3rem
  position relative
  &:before
    color rgba($blue, .5)
    content open-quote
    font-size 4rem
    font-weight 700
    left .8rem
    position absolute
    top 1rem

code
  background $lightengray
  border-radius .25rem
  display block
  margin 1rem
  padding 1rem

h1, h2, h3, h4, h5, h6
  margin 1rem 0

h1
  font-weight 700
  font-size 2rem
  text-transform uppercase

h2
  font-weight 400
  font-size 2rem
  text-transform uppercase

h3
  font-family "Roboto Slab"
  font-weight 700
  font-size 1.5rem

h4
  font-family "Roboto Slab"
  font-weight 400
  font-size 1.5rem

h5
  font-weight 700
  font-size 1.5rem

h6
  font-weight 400
  font-size 1.5rem

hr
  border none
  background $lightengray
  height 1px
  margin-bottom 1rem
  width 100%

p
  line-height 1.5rem

// Font

@font-face
    font-family 'icomoon'
    src url('../fonts/icomoon.eot?46frue')
    src url('../fonts/icomoon.eot?46frue#iefix') format('embedded-opentype'), url('../fonts/icomoon.ttf?46frue') format('truetype'), url('../fonts/icomoon.woff?46frue') format('woff'), url('../fonts/icomoon.svg?46frue#icomoon') format('svg')
    font-weight normal
    font-style normal

[class^="icon-"], [class*=" icon-"]
    font-family 'icomoon' !important
    speak none
    font-style normal
    font-weight normal
    font-variant normal
    text-transform none
    line-height 1
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

.icon-sms:before
    content "\e900"
.icon-map:before
    content "\e901"
.icon-medicine:before
    content "\e902"
.icon-clothes:before
    content "\e903"
.icon-lantern:before
    content "\e904"
.icon-hammer:before
    content "\e905"
.icon-news:before
    content "\e906"
.icon-pointer:before
    content "\e907"
.icon-marmalade:before
    content "\e908"

// Grid

.container
  margin-right auto
  margin-left auto
  padding-right 2%
  padding-left 2%
  max-width 98%
.row
  box-sizing border-box
  display flex
  flex-direction row
  flex-wrap wrap
  flex 0 1 auto
  margin-left -1%
  margin-right -1%
.row + .row
  margin-bottom 10px
.row.reverse
  flex-direction row-reverse
.col.reverse
  flex-direction column-reverse

